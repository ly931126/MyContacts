<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.liye.mycontacts">

    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <!--&lt;!&ndash; 给桌面发送快捷方式的权限 &ndash;&gt;-->
    <!--<uses-permission android:name="android.permission.INSTALL_SHORTCUT" />-->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/pink_design_11"
        android:label="电话薄"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
        <activity android:name="com.liye.mycontacts.menu.TelephoneActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".myContacts.XiangxiActivity"></activity>
        <activity android:name=".myContacts.EditContactActivity"></activity>
        <activity android:name=".myContacts.AddPeopleActivity"></activity>
        <activity android:name=".myContacts.CallPhoneActivity"></activity>
        <activity android:name=".menu.RegisterActivity"></activity>

        <activity
            android:name=".menu.EditNotes"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".menu.WaterMemory" />
        <activity android:name=".menu.TopTabActivity" />
        <activity
            android:name=".menu.CallbyeTabActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".menu.WriteMyselfSpace" />
        <activity android:name=".menu.RecordNote" />
    </application>

</manifest>

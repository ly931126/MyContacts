<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:background="@drawable/back"
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.liye.mycontacts.myContacts.SearchEditText
            android:id="@+id/edt_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input"
            android:hint="搜索"

            />

        <ListView
            android:id="@+id/lst_show_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_search"

            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/lan1"
            >


            <ImageView
                android:id="@+id/menu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:src="@drawable/menu1" />


            <TextView

                android:id="@+id/txt_add_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginRight="30dp"
                android:text="添加联系人"
                android:textSize="24sp" />

            <TextView

                android:id="@+id/txt_call_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拨打电话"
                android:textSize="24sp" />

        </LinearLayout>


        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></FrameLayout>

    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menu"
            android:layout_width="270dp"
            android:layout_height="fill_parent"
            android:layout_gravity="start"
            android:background="@drawable/shiguang1">

            <ImageView
                android:id="@+id/imagebtn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                />
            <!--        -->

            <LinearLayout
                android:id="@+id/linearlayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imagebtn"

                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
               >

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="liye"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:textSize="23sp" />

                <ImageView
                    android:id="@+id/imagebtn1"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menuicon_exit01" />


            </LinearLayout>


            <ListView
                android:id="@+id/contentList"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@id/linearlayout1"
                android:layout_marginTop="60dp"
                android:divider="@drawable/menuline"
                />

        </RelativeLayout>

 </android.support.v4.widget.DrawerLayout>